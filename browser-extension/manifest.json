{
  "manifest_version": 2,
  "name": "Job Application Assistant",
  "version": "1.0.0",
  "description": "Auto-fill job applications and track your progress",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  }
}