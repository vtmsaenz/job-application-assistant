{
  "name": "job-application-assistant",
  "version": "1.0.0",
  "description": "Desktop app for tracking job applications and auto-filling forms",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "vite build && electron-builder"
  },
  "keywords": [
    "job",
    "tracker",
    "application",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^38.4.0",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "vite": "^7.1.11",
    "wait-on": "^7.2.0"
  }
}
